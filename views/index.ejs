<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <link rel='stylesheet' href='/lib/bootstrap/dist/css/bootstrap.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <script type="text/javascript" src="/lib/socket.io-client/dist/socket.io.min.js"></script>
    <script type="text/javascript">
        var port = <%= port %>,
            serverIp = '<%= ip %>';
    </script>
    <script type="text/javascript" src="/js/app.js"></script>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center"><%= title %></h1>
      <br />

      <div id="username-selection" class="col-xs-4 col-xs-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">Enter your username</div>
          <div class="panel-body" class="text-center">
            <form class="form-inline" role="form" onsubmit="return false;">
              <div class="form-group">
                <label class="sr-only" for="username">Username</label>
                <input type="text" class="form-control" id="username" placeholder="Enter username">
              </div>
              <button class="btn btn-primary" id="set-username-btn">Enter</button>
            </form>
          </div>
        </div>
      </div>

      <div id="chatbox" class="col-xs-10 col-xs-offset-1 hidden">
        <div class="panel panel-default">
          <div class="panel-heading">Chat box</div>
          <div class="panel-body" class="clearfix">
            <div class="col-xs-9 pull-left">
              <div id="chatbox-messages">
                
              </div>
            </div>
            <div class="col-xs-3 pull-right">
              <div class="well well-sm" id="online-list-holder">
                <h3>Online</h3>
                <ul id="online-list">
                </ul>
              </div>
            </div>
          </div>
          <div class="panel-footer clearfix">
            <form id="message-form">
            <div class="col-xs-9 pull-left">
              <input type="text" class="form-control" id="message-text" placeholder="Enter message...">
            </div>
            <div class="col-xs-3 pull-right">
              <button class="btn btn-success" id="send-message-btn">Send message</button>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>